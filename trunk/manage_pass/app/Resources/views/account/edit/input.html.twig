{% extends 'base.html.twig' %}
{% block title %}パスワード変更{% endblock %}
{% block body %}
    <div class="wallBelt narrow">
        <div class="contents">
            <h1 class="pageTitle">パスワード変更</h1>
            {{ form_start(form) }}
                <table class="table form">
                    <tr>
                        <th>名前</th>
                        <td>{{ account.name }}</td>
                    </tr>
                    <tr>
                        <th>パスワード</th>
                        <td class="form-group">
                            <p class="limit">半角英数字 8文字以上72文字以下</p>
                            {{ form_widget(form.password, {'attr':{'class':'form-control password'}})}}
                            <input type="checkbox" id="Toggle-secret">
                            <label for="Toggle-secret">パスワードを表示する</label>
                            <button type="button" class="btn btn-secondary btn-sm" id="CreatePassword">パスワードを生成する</button>
                            {{ form_errors(form.password, {'attr':{'class':'error'}}) }}
                        </td>
                    </tr>
                    <tr>
                        <th>管理者メモ</th>
                        <td class="form-group">
                            {% form_theme form _self %}                         
                            {% block textarea_widget %}
                                {{ block('app/Resources/views/form/textarea_widget.html.php') }}
                            {% endblock %}

                            {% form_theme form 'account/edit/input.html.twig' %}
                            {{ form_widget(form.memo, {'attr':{'class':'form-control memo'}}) }}
                            {{ form_errors(form.memo, {'attr':{'class':'error'}}) }}
                        </td>
                    </tr>
                    <tr>
                        <th>登録日時表示</th>
                        <td>{{ account.createdDate | date('Y-m-d H:i') }}</td>
                    </tr>
                    <tr>
                        <th>更新日時表示</th>
                        <td>{{ account.modifiedDate | date('Y-m-d H:i') }}</td>
                    </tr>
                </table>

                <div class="buttonBox">
                    <ul>
                        <li class="submit">{{ form_widget(form.confirm, {'attr':{'formnovalidate':'formnovalidate', 'class':'btn btn-primary'}, 'label': '確認'}) }}</li>
                        <li class="back"><a href="{{ path('accountList') }}" class="btn btn-secondary">一覧に戻る</a></li>
                    </ul>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

