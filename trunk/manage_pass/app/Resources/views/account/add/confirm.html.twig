{% extends 'base.html.twig' %}
{% block title %}アカウント追加{% endblock %}
{% block body %}
    <div class="wallBelt narrow">
        <div class="contents">
            <h1 class="pageTitle">アカウント追加　確認</h1>
            <table class="table">
                <tr>
                    <th>名前</th>
                    <td>{{ account.name }}</td>
                </tr>
                <tr>
                    <th>パスワード</th>
                    <td>{{ account.password }}</td>
                </tr>
                <tr>
                    <th>管理者メモ</th>
                    <td>{{ account.memo }}</td>
                </tr>
            </table>
            {{ form_start(form_finish) }}
            <div class="buttonBox">
                <ul>
                    <li>{{ form_widget(form_finish.finish, {'attr':{'class':'btn btn-primary'}}) }}</li>
                </ul>
            </div>
            {{ form_end(form_finish) }}
        </div>
    </div>
{% endblock %}